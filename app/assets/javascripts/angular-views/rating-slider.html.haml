%div.rating
  %div.rating-slider
    %canvas(width="350" height="40")
    %div.handle
  -#%div.vote_count(ng-pluralize count="comment.number_of_votes" when="{'0': 'No votes yet', 'one': '1 vote', 'other': '{} votes'}")
  %div.vote_count(ng-switch on="comment.number_of_votes")
    %div(ng-switch-when="0")
      %div.count 0
      %div.lbl No votes yet
    %div(ng-switch-when="1")
      %div.count 1
      %div.lbl vote
    %div(ng-switch-default)
      %div.count {{comment.number_of_votes}}
      %div.lbl votes



