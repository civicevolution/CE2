%div

  .modal-header
    %h3 Sign in to CivicEvolution
  .modal-body
    %form(ng-submit="submit_sign_in(signin)"){name: 'signIn'}
      %p
        Email:
        %input(ng-model='signin.email' required ce-focus){type: 'text', name: 'email', :placeholder => "Enter email...", value: 'alice@civicevolution.org'}
        -#ng-pattern='^\S+\@\S+\.\S+$'
          %span(ng-show="form.email.$error.pattern")
            Incorrect Format, should be MM/DD/YY!

      %p
        Password:
        %input(ng-model='signin.password' required){type: 'text', :placeholder => "Enter password...", value: 'aaaaaaaa'}



      .modal-footer
        %button.btn.btn-primary(ng-disabled='!signIn.$valid') Sign in
        %button.btn.btn-primary(ng-click="cancel(result)") Cancel

  -#.row-fluid
    .span6
      %label.checkbox
        %input{"ng-model" => "opts.backdrop", :type => "checkbox"}>/
        Show backdrop
      %label.checkbox
        %input{"ng-model" => "opts.dialogFade", :type => "checkbox"}>/
        Fade modal dialog
      %label.checkbox
        %input{"ng-disabled" => "!opts.backdrop", "ng-model" => "opts.backdropFade", :type => "checkbox"}>/
        Fade Backdrop
      %hr/
      %label.checkbox
        %input{"ng-model" => "opts.keyboard", :type => "checkbox"}>/
        Close on Escape
      %label.checkbox
        %input{"ng-disabled" => "!opts.backdrop", "ng-model" => "opts.backdropClick", :type => "checkbox"}>/
        Close on backdrop click
    .span6
      %p Change options at will and press the open dialog button below!
      %p
        %button.btn.btn-primary{"ng-click" => "openDialog()"} Open Dialog
      %p Alternatively open a simple message box:
      %p
        %button.btn.btn-primary{"ng-click" => "openMessageBox()"} Open Message Box