%div.comment
  -#%p scope id: {{$id}}
  %span(ng-bind-template="{{comment.first_name}} said \"{{comment.text}}\"")
  %a(ng-click="edit({{comment.id}})")
    Edit
  %span(ng-show="comment.version>1")
    Version {{comment.version}}
    %a(ng-click="view_history({{comment.id}})")
      View history

  %div.attachments
    %div.attachment(ng-repeat="attachment in comment.attachments" )
      %img.icon(ng-src="{{attachment.icon_url}}")
      %p.name
        %a(ng-href="{{attachment.url}}"){target: "_blank"}
          {{attachment.attachment_file_name}}

  %div.clear(ce-rating-slider)

  %div.clr(ng-include src="history_url")
