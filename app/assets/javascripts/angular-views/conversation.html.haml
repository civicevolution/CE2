%div.conversation

  .row-fluid
    .span12.summary
      %h4 Summary
      %div
        %div.comment-outer(ng-repeat="comment in SummaryComments" )
          %div(ce-sortable ce-comment)

  .div(ng-switch="add_summary_comment" )
    .row-fluid(ng-switch-default )
      .span8
        %p
          %a(ng-click="show_summary_comment_form()")
            Add another summary comment

    .row-fluid(ng-switch-when="true")
      .span8
        %h4 Add a summary comment to help capture this conversation
        %div(ce-comment-form max="SummaryCommentLength" type="SummaryComment")



  .row-fluid
    .span12.conversation
      %h4 Conversation
      %div.comment-outer(ng-repeat="comment in ConversationComments" )
        %div(ce-comment)

  .row-fluid
    .span12.reply-comment-preview
      -#%h4 What do you think?
      %div(ce-comment-form max="ConversationCommentLength" type="ConversationComment")
