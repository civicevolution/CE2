    %div(ng-if="user.first_name=='Themer'")
      %div(ng-repeat="conversation in conversations")
        %h4 {{conversation.title}}

        %p
          %a{href: "/#/conversation/{{conversation.code}}/theme/{{conversation.munged_title}}"}
            Theming page



    %div(ng-if="user.first_name=='Group'")
      %div(ng-repeat="conversation in conversations")
        %h4 {{conversation.title}}

        %p
          %a{href: "/#/conversation/{{conversation.code}}/group/{{conversation.munged_title}}"}
