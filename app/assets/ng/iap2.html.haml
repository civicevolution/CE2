  %div(ng-if="user=='null'")
    %h3
      Please
      %a(ng-click="sign_in()")
        %b Sign in


    %h4.public-links Public links

    %div(ng-repeat="conversation in conversations")
      %h4 {{conversation.title}}

      %p
        %a{href: "/#/conversation/{{conversation.code}}/themes/{{conversation.munged_title}}"}
          The final themes



  %div(ng-if="user.id>0")
    %h3 Your links for this session

    %div(ng-if="user.first_name=='Coordinator'")

      %div(ng-repeat="conversation in conversations")
        %h4 {{conversation.title}}

        %p
          %a{href: "/#/conversation/{{conversation.code}}/theme/{{conversation.munged_title}}"}
