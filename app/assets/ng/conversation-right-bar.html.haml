        %a(ng-click="open_panel('download')" ng-class="{selected: active_link == 'download'}") Download


      %li.label Curator settings

      %li
        %a(ng-click="open_panel('privacy')" ng-class="{selected: active_link == 'privacy'}") Privacy settings
      %li
        %a(ng-click="open_panel('schedule')" ng-class="{selected: active_link == 'schedule'}") Schedule
