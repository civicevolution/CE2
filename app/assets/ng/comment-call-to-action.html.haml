%div.comment(ng-switch="comment.type" ng-class="comment.type" select_reference="comment-{{comment.id}}"){id: "com-cta"}
  .span12.summary-comment-body
    .comment-body-container
      %div.header
        %p.time {{comment.updated_at | from_now}}
        %p {{comment.purpose}}

      %div(ng-bind-html-unsafe="converter.makeHtml(comment.text)" ng-mouseup="text_select_by_mouse()")

      %div.history.clear(ng-include src="history_url")

      %div.footer

        %a(ng-click="show_comment_form('call-to-action-reply', comment.id, comment.version)")
          %i.icon-reply
          %span Reply
        %a(ng-click="share(comment.id)")
          %i.icon-share-alt
          %span Share
        %a(ng-click="flag(comment.id)")
          %i.icon-flag
          %span Flag

        %a(ng-show="comment.version>1" ng-click="view_history({{comment.id}})")
          History v{{comment.version}}

        %a#edit-cta-link(ng-if="comment.editable_by_user" ng-click="edit('{{comment.type}}',{{comment.id}})"){title: "Edit this comment"}
          -#%i.icon-pencil
          Edit
