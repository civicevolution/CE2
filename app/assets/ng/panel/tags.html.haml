%div.tags-panel.panel
  #panel-tags


    %h3.panel-title Tags that describe this conversation

    %fieldset
      %p.title Please add one or more tags that will help people find your conversation

      %div.tags(ng-click="focus_to_input(this)")
        %div.tag(ng-repeat="tag in conversation.tags" )
          %div {{tag}}
          %button.close(ng-click="delete_tag()") &times;

        %input.tag(ng-keydown="keydown(this)")

    %fieldset
      %button.btn-primary.btn(ng-click="updateTags()" ng-bind-html="form_submit_status"){type: 'submit'}
      %button.btn.btn-link(ng-click="close_panel()") Cancel

