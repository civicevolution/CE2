.iap2.agenda-home.custom
  %h4 {{agenda.title}}
  %div(ng-bind-html-unsafe="converter.makeHtml(agenda.description)")

  %div(ng-switch="agenda.active_role.name")
    %div(ng-switch-when="undefined" )
      %p
        Select your role:
        %select(ng-model="agenda.active_role.role" ng-options="o.value as o.key for o in agenda.roles" ng-change="update_role()")
          %option(value="" disabled selected) Select your role

      %div(ng-switch="agenda.active_role.role" )
        %div(ng-switch-when="coordinator" )
          %p
            Coordinator
            Access code:
            %input.code(type="password" ng-model="agenda.active_role.access_code")
            %button.btn-primary.btn(ng-click="accept_role()") Start

        %div(ng-switch-when="themer" )
          %p
            Please enter Team #:
            %input.id(ng-model="agenda.active_role.identifier")
            and Access code:
            %input.code(type="password" ng-model="agenda.active_role.access_code")
            %button.btn-primary.btn(ng-click="accept_role()") Start

        %div(ng-switch-when="group" )
          %p
            Please enter Group #:
            %input.id(ng-model="agenda.active_role.identifier")
            and Access code:
            %input.code(type="password" ng-model="agenda.active_role.access_code")
            %button.btn-primary.btn(ng-click="accept_role()") Start

        %div(ng-switch-when="reporter" )
          %p
            Reporter
            Access code:
            con%input.code(ng-model="agenda.active_role.access_code")
            %button.btn-primary.btn(ng-click="accept_role()") Start

    -#%div(ng-switch-default)
      %div(ng-switch="agenda.active_role.role" )
        %div(ng-switch-when="coordinator" )
          %p coordinator links

        %div(ng-switch-when="themer" )
          %p Theme team links

        %div(ng-switch-when="group" )
          %p Group scribe links

        %div(ng-switch-when="reporter" )
          %p Reporter links

      %a(ng-click="signout_role()") Sign out


    %hr
    %a(href="/#/cmp/on0dc47axr/sgd/6ko91rkoem/xyz")
      Manual link to the first two questions

    %a(href="/#/cmp/atw06kwq2d/sgd_theme/what-could-we-do-differently-to-scale-up-to-address")
      Q1 Theme team 1
    %a(href="/#/cmp/ncux4g28f2/sgd_theme/what-could-we-do-differently-to-scale-up-to-address")
      Q1 Theme team 2
    %a(href="/#/cmp/r84dimztm3/sgd_theme/what-could-we-do-differently-to-scale-up-to-address")
      Q1 Theme team 3

    %a(href="/#/cmp/oli411olr0/sgd_theme/what-could-we-do-differently-to-scale-up-to-address")
      Q2 Theme team 1
    %a(href="/#/cmp/3y85w0s2e1/sgd_theme/what-could-we-do-differently-to-scale-up-to-address")
      Q2 Theme team 2
    %a(href="/#/cmp/ofjrdisvok/sgd_theme/what-could-we-do-differently-to-scale-up-to-address")
      Q2 Theme team 3


    %div(ng-repeat="comp in agenda.menu_data" )
      %h4 {{comp.descriptive_name}}
      -#%div(ng-include="'/assets/live/menu/small-group-deliberation.html'")
      %div(ng-include="'/assets/live/menu/' + comp.menu_template + '.html'")
      -#%div{'ng-include' => "'#{ path_to_asset("live/menu/{{comp.menu_template}}.html") }'"}

    %a(ng-click="signout_role()") Sign out