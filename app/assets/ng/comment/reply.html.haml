%div.comment-reply
  %div.reply-outer
    .col-md-2.author
      %img(ng-src="http://assets.civicevolution.org/users/civic_dev/{{reply.photo_code}}/sm5/p.jpg")
      %p.name {{reply.first_name}} {{reply.last_name}}

    .col-md-10.body-with-arrow
      .arrow
      .comment-body-container

        %div.header
          %p.time {{reply.updated_at | from_now}}
          %p {{reply.purpose}}

        %div.comment-body(ng-bind-html="reply.text")
        %p.footer
          %i.fa.fa-arrow-down(ng-click="goto_comment(reply.id)")
