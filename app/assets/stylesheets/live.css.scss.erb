.content{
  box-shadow: none;
}

.theme-view{
  div.count{
    display: none;
  }
}

.live-choose-results, .live-allocate-results{
  color: #324A7F;
  td{
    vertical-align: top;
    padding-bottom: 12px;
  }
  td.letter{
    font-weight: bold;
    font-size: 3em;
    line-height: 1em;
    padding-right: 16px;
  }
  td.votes{
    font-weight: bold;
    font-size: 3em;
    line-height: 1em;
    padding-right: 16px;
  }
  td.percent{
    font-weight: bold;
    font-size: 2em;
    line-height: 1em;
    padding-top: 6px;
    padding-right: 16px;
  }
  td.live-theme{
    font-weight: bold;
    font-size: 2em;
    line-height: 1.4em;
    //max-width: 700px;
  }
  blockquote{ display:none;}
  .graph{
    margin-bottom: 20px;
    .theme{
      background-image: url(<%=asset_path "bar-graph-bg.gif"%>);
      background-size: 50% 100%;
      background-repeat: no-repeat;
    }
    font-weight: bold;
    font-size: 2em;
    line-height: 1.4em;
    color: #324A7F;
    .count {padding-right: 8xp;}
    .percent{ padding-left: 8px; font-style: italic;}
    @media screen and (max-width: 900px){
      font-size: 1.4em;
    }
  }
}

.live-choose-results{
  .lighten{
    opacity: .4;
  }
}

.live-allocate{
  max-width: 750px;
  td,th {padding: 8px;}
  td.option{
  }
  .warn{ color:red;}
  td.alloc{
    h3{display: inline;}
    white-space: nowrap;
  }
  td.letter{
    font-size: 2em;
    font-weight: bold;
  }
  td.text{
    font-size: 1.2em;
  }
  .right{float: right;}
  input.allocation{
    font-size: 1.4em;
    margin-bottom: 10px;
    width: 60px;
  }

}
.ce-size-adjust{
  position: fixed;
  top: 60px;
  right: 20px;
  opacity: .3;
  //border: 3px solid red;
  background-color: #ccc;
  z-index: 2000;
  font-weight: bold;
  .inc{
    font-size: 1.2em;
    padding: 8px;
    cursor: pointer;
  }
  .dec{
    font-size: 1em;
    padding: 8px;
    cursor: pointer;
  }
}

.size-inc-1{
  color: blue;
}
.size-dec-1{
  color: red;
}

